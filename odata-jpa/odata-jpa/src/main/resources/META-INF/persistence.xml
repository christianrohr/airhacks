<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="odata" transaction-type="RESOURCE_LOCAL">
      <!--jta-data-source>jdbc/__default</jta-data-source-->
      <non-jta-data-source>java:comp/DefaultDataSource</non-jta-data-source>
      <class>com.airhacks.ojpa.vehicles.entity.Vehicle</class>
      <exclude-unlisted-classes>true</exclude-unlisted-classes>
      <properties>
          <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
          <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
          <property name="eclipselink.logging.level" value="FINE"/>
      </properties>
    </persistence-unit>
    <persistence-unit name="jaxrs" transaction-type="JTA">
        <jta-data-source>java:comp/DefaultDataSource</jta-data-source>
        <class>com.airhacks.ojpa.vehicles.entity.Vehicle</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>
